extends base

block content
    tr
        td
            if (isOwnProfile && email === undefined)
                table(border="0" cellpadding="0" cellspacing="0")
                    tr
                        td(bgcolor="#ffffaa")
                            table(cellpadding="5" width="100%")
                                tr
                                    td
                                        | Please put a valid address in the email field, or we won't be able to
                                        | send you a new password if you forget yours.  Your address is only
                                        | visible to you and us.  Crawlers and other users can't see it.
            form.profileform(method="post" action="/xuser")
                table(border="0")
                    tr.athing
                        td(valign="top") user:
                            a.hnuser(href="user?id=" + username)
                                font(color="#3c963c") #{username}
                    tr
                        td(valign="top") created:
                        td
                            a(href="front?day=2018-04-09&birth=Swaggaaa") 6 days ago
                    tr
                        td(valign="top") karma:
                        td
                            | 1
                    tr
                        td(valign="top") about:
                        td
                            textarea(cols="60" rows="5" wrap="virtual" name="about")
                            font(size="-2")
                                a(href="formatdoc" tabindex="-1")
                                    font(color="#afafaf") help
                    tr
                        td(valign="top") email:
                        td
                            input(type="text" name="uemail" value="" size="60")
                    tr
                        td(valign="top") showdead:
                        td
                            select(name="showd")
                                option yes
                                option(selected="") no
                    tr
                        td(valign="top") noprocrast:
                        td
                            select(name="nopro")
                                option yes
                                option(selected="") no
                    tr
                        td(valign="top") maxvisit:
                        td
                            input(type="text" name="maxv" value="20" size="16")
                    tr
                        td(valign="top") minaway:
                        td
                            input(type="text" name="mina" value="180" size="16")
                    tr
                        td(valign="top") delay:
                        td
                            input(type="text" name="delay" value="0" size="16")
                    tr
                        td
                        td
                            a(href="changepw")
                                u change password
                    tr
                        td
                        td
                            a(href="submitted?id=Swaggaaa")
                                u submissions
                    tr
                        td
                        td
                            a(href="threads?id=Swaggaaa")
                                u comments
                    tr
                        td
                        td
                            a(href="hidden")
                                u hidden
                    tr
                        td
                        td
                            a(href="favorites?id=Swaggaaa")
                                u favorite submissions
                            |  /
                            a(href="favorites?id=Swaggaaa&comments=t")
                                u comments
                            span(style="font-style:italic") (shared)
                br
                input(type="submit" value="update")
            br
            br
