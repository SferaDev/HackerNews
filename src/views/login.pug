extends base

block content
    tr
        td
            b Login
                br
                br
                form(method="post" action="login")
                    table(border="0" cellpadding=5)
                        tr
                            td Username:&nbsp
                            td
                                input(type="text" name="acct" size="20" spellcheck="false" autofocus="true")
                        tr
                            td Password:&nbsp
                            td
                                input(type="password" name="pw" size="20")
                        tr
                            td
                                input(type="submit" value="Login")
                a(href="forgot") Forgot your password?
                br
                br
                b Create Account
                br
                br
                form(method="post" action="register")
                    table(border="0" cellpadding=5)
                        tr
                            td Username:&nbsp
                            td
                                input(type="text" name="acct" size="20" spellcheck="false")
                        tr
                            td Password:&nbsp
                            td
                                input(type="password" name="pw" size="20")
                        tr
                            td
                                input(type="submit" value="Create account")
