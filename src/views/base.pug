html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" type="text/css" href="stylesheets/news.css")
        link(rel="shortcut icon" href="favicon.png")
        if subtitle
            title #{subtitle} | News4Hackers
        else
            title News4Hackers
    body
        center
            table#hnmain(border="0" cellpadding="5" cellspacing="0" width="85%" bgcolor="#f6f6ef")
                tr
                    td(bgcolor="#26C6DA")
                        table(border="0" cellpadding="0" cellspacing="2" width="100%" style="padding:2px")
                            tr
                                td(style="width:26px;padding-right:4px")
                                    a(href="news")
                                        img(src="images/pug.svg" width="26" height="26")
                                td(style="line-height:12pt; height:10px;")
                                    span.pagetop
                                        b.hnname
                                            a(href="news") News4Hackers&nbsp&nbsp
                                        a(href="newest") New
                                        |  |&nbsp
                                        a(href="ask") Ask
                                        if (username !== undefined)
                                            |  |&nbsp
                                            a(href="threads?id=" + username) Threads
                                        |  |&nbsp
                                        a(href="newcomments") Comments
                                        if (username !== undefined)
                                            |  |&nbsp
                                            a(href="submit") Submit
                                td(style="text-align:right;padding-right:4px;")
                                    span.pagetop
                                        if (username !== undefined)
                                            a#me(href="user?id=" + username) #{username}
                                            |                 (#{karma}) |&nbsp
                                            a#logout(href="logout?back=" + url) Logout
                                        else if process.env.GITHUB_CLIENT_ID
                                            a#login(href="auth") Login
                                        else
                                            a#login(href="login") Login
                tr(style="height:10px")
                tr
                    td
                        block content
                tr
                    td
                        br
                        table(width="100%" cellspacing="0" cellpadding="1")
                            tr
                                td(bgcolor="#26C6DA")
                        br
                        center
                            span.bottomlinks
                                a(href="welcome") Welcome
                                |         |&nbsp
                                a(href="docs") API
                                |         |&nbsp
                                a(href="https://github.com/SferaDev/HackerNews") GitHub
                            br
                tr(style="height:10px")